<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="285dp"
            android:contentDescription="GaiaShopping"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/web_gaia" />

        <TextView
            android:id="@+id/shoppingname2"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:padding="3dp"
            android:textAlignment="center"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/locationtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:paddingVertical="10dp"
            android:text="Location"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/shoppingname2"
            tools:layout_editor_absoluteX="16dp" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapa"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@+id/locationtag"
            tools:layout_editor_absoluteX="4dp" />

        <TextView
            android:id="@+id/schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="Schedule"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/mapa" />

        <TextView
            android:id="@+id/shoppinghorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/schedule"
            tools:layout_editor_absoluteX="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>